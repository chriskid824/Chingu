{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es2017", "es2020", "esnext.asynciterable"]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
